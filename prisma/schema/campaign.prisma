model Campaign {
  id     Int @id @default(autoincrement())
  user_id Int

  name String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt @default(now())

  // Relations
  screens            Screen[]
  player_characters   PlayerCharacter[]
  non_player_character NonPlayerCharacter[]

  // "onDelete: cascade" means delete all posts if the author is deleted
  created_by User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index(user_id)
}
