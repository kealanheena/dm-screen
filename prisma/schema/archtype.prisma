model Archtype {
  id Int @id @default(autoincrement())

  name String
  key  String @unique

  spellcasting_ability Ability_Score?
  feature_ability_modifier Ability_Score?

  player_characters Player_Character[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt @default(now())
}

enum Ability_Score {
  STRENGTH
  DEXTERITY
  CONSTITUTION
  INTELLIGENCE
  WISDOM
  CHARISMA
}
