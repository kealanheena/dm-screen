model Screen {
  id         Int  @id @default(autoincrement())
  userId     Int
  campaignId Int?

  name       String
  isTemplate Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  cards    Card[]
  // "onDelete: cascade" means delete all posts if the author is deleted
  owner    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index(userId)
}

model Card {
  id       Int @id @default(autoincrement())
  screenId Int

  // Card content here ...
  title String
  type CardType

  // List content
  listContent ListContentType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  screen Screen     @relation(fields: [screenId], references: [id], onDelete: Cascade)
  layout CardLayout?
}

model CardLayout {
  id     Int @id @default(autoincrement())
  cardId Int @unique
  // X & Y positions on the grid in grid units
  x      Int @default(0)
  y      Int @default(0)
  // Width & Height in grid units, not pixels
  w      Int @default(6)
  h      Int @default(4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation
  card      Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

enum CardType {
  TEXT
  LIST
  IMAGE
}

enum ListContentType {
  playerCharacter
  nonPlayerCharacter
}
