model Screen {
  id         Int  @id @default(autoincrement())
  user_id     Int
  campaign_id Int?

  name       String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  cards    Card[]
  layouts Layout[]
  // "onDelete: cascade" means delete all posts if the author is deleted
  owner    User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaign_id], references: [id], onDelete: Cascade)

  @@index(user_id)
}

model Card {
  id       Int @id @default(autoincrement())
  layoutId Int
  screenId Int

  // Card content here ...
  title String
  description String?
  
  type CardType

  // Image content
  img String?

  // List content
  listContent ListContentType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  screen Screen     @relation(fields: [screenId], references: [id], onDelete: Cascade)
}

model Layout {
  i     Int @id @default(autoincrement())
  screenId Int
  // X & Y positions on the grid in grid units
  x      Int @default(0)
  y      Int @default(0)
  // Width & Height in grid units, not pixels
  w      Int @default(6)
  h      Int @default(4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation
  screen    Screen @relation(fields: [screenId], references: [id], onDelete: Cascade)
}

enum CardType {
  TEXT
  LIST
  IMAGE
}

enum ListContentType {
  playerCharacter
  nonPlayerCharacter
}
