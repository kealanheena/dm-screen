generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum CardType {
  TEXT
  LIST
  IMAGE
}

enum ClassType {
  BARBARIAN
  BARD
  CLERIC
  DRUID
  FIGHTER
  MONK
  PALADIN
  RANGER
  ROGUE
  SORCERER
  WARLOCK
  WIZARD
}

enum SpeciesType {
  AASIMAR
  DRAGONBORN
  DWARF
  ELF
  GNOME
  GOLIATH
  HALFLING
  HUMAN
  ORC
  TIEFLING
}

enum SubSpeciesType {
  // Dragonborn
  BLACKDRAGONBORN
  BLUEDRAGONBORN
  BRASSDRAGONBORN
  BRONZEDRAGONBORN
  COPPERDRAGONBORN
  GOLDDRAGONBORN
  GREENDRAGONBORN
  REDDRAGONBORN
  SILVERDRAGONBORN
  WHITEDRAGONBORN
  // Elf
  DROWELF
  HIGHELF
  WOODELF
  // Gnomes
  ForestGnome
  ROCKGNOME
  // Goliath
  CLOUDGOLIATH
  FIREGOLIATH
  FROSTGOLIATH
  HILLGOLIATH
  STONEGOLIATH
  STORMGOLIATH
  // Tiefling
  ABYSSALTIEFLING
  CHTHONICTIEFLING
  INFERNALTIEFLING
}

enum AbilityScore {
  STRENGTHORDEXTERITY
  STRENGTH
  DEXTERITY
  CONSTITUTION
  INTELLIGENCE
  WISDOM
  CHARISMA
}

model Campaign {
  id Int @id @default(autoincrement())
  userId Int

  title String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  screens Screen[]
  playerCharacters PlayerCharacter[]
  // "onDelete: cascade" means delete all posts if the author is deleted
  owner User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index(userId)
}

model Card {
  id Int @id @default(autoincrement())
  sectionId Int
  
  title String
  type CardType
  height Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index(sectionId) // composite index for faster queries
  // @@unique([screenId, title]) // this prevents a user duplicating a title on a screen something twice
}

model Class {
  id Int @id @default(autoincrement())
  title String @unique

  primaryAbility AbilityScore
  secondaryAbility AbilityScore?

  spellcastingAbility AbilityScore?

  playerCharacters PlayerCharacter[]
}

model PlayerCharacter {
  id Int @id @default(autoincrement())
  campaignId Int
  classId Int?

  name String
  
  species SpeciesType
  subSpecies SubSpeciesType?

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  class Class? @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model Screen {
  id Int @id @default(autoincrement())
  userId Int
  campaignId Int?

  title String
  isTemplate Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sections Section[]
  // "onDelete: cascade" means delete all posts if the author is deleted
  owner User @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index(userId)
}

model Section {
  id Int @id @default(autoincrement())
  screenId Int

  start Int
  width Int

  cards Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  screen Screen @relation(fields: [screenId], references: [id], onDelete: Cascade)
}

model User {
  id Int @id @default(autoincrement())
  clerkId String @unique

  email String @unique
  username String @unique

  name String?
  image String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  campaigns Campaign[]
  screens Screen[]
}
