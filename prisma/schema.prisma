generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  clerkId String @unique

  email String @unique
  username String @unique

  name String?
  image String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // TODO: add DB Relations Screens, Players, Messages

  // Relations

  layouts Layout[]
}

model Layout {
  id Int @id @default(autoincrement())
  userId Int

  isDefault Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  blocks Block[]
  // "onDelete: cascade" means delete all posts if the author is deleted
  owner User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index(userId)
}

model Block {
  id Int @id @default(autoincrement())
  layoutId Int

  start Int
  width Int

  cards Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  layout Layout @relation(fields: [layoutId], references: [id], onDelete: Cascade)
}

model Card {
  id Int @id @default(autoincrement())
  blockId Int
  
  title String
  type CardType
  height Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  block Block @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@index(blockId) // composite index for faster queries
  // @@unique([layoutId, title]) // this prevents a user duplicating a title on a layout something twice
}

enum CardType {
  LIKE     
  COMMENT 
  FOLLOW   
}
